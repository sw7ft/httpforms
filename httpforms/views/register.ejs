<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-primary">
      Complete your registration
    </h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <% if (locals.error) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <%= error %>
      </div>
    <% } %>
    
    <% if (locals.sessionRequired) { %>
      <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded mb-4">
        You need to select a subscription plan before registering.
      </div>
      <div class="text-center mt-6">
        <a href="/plans" class="btn-primary">Choose a Plan</a>
      </div>
    <% } else { %>
      <form class="space-y-6" action="/register" method="POST">
        <input type="hidden" name="sessionId" value="<%= locals.sessionId || '' %>">
        
        <div>
          <label for="name" class="form-label">Name</label>
          <div class="mt-2">
            <input id="name" name="name" type="text" required class="form-input" placeholder="John Doe">
          </div>
        </div>

        <div>
          <label for="email" class="form-label">Email address</label>
          <div class="mt-2">
            <input id="email" name="email" type="email" autocomplete="email" required class="form-input" placeholder="john@example.com">
          </div>
        </div>
        
        <div>
          <label for="phoneNumber" class="form-label">Phone Number (for SMS notifications, optional)</label>
          <div class="mt-2">
            <input id="phoneNumber" name="phoneNumber" type="tel" class="form-input" placeholder="+1234567890">
          </div>
          <p class="mt-1 text-xs text-gray-500">Format: +[country code][number], e.g., +12125551234</p>
        </div>

        <div>
          <label for="password" class="form-label">Password</label>
          <div class="mt-2">
            <input id="password" name="password" type="password" required class="form-input">
          </div>
        </div>
        
        <div>
          <label for="confirmPassword" class="form-label">Confirm Password</label>
          <div class="mt-2">
            <input id="confirmPassword" name="confirmPassword" type="password" required class="form-input">
          </div>
        </div>

        <div>
          <button type="submit" class="btn-primary w-full">Create Account</button>
        </div>
      </form>
    <% } %>

    <p class="mt-10 text-center text-sm text-gray-500">
      Already a member?
      <a href="/login" class="font-semibold leading-6 text-primary hover:text-accent">Sign in</a>
    </p>
  </div>
</div> 