<!-- Hero Section -->
<section class="relative bg-primary text-white py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="lg:grid lg:grid-cols-12 lg:gap-8">
      <div class="lg:col-span-6">
        <h1 class="text-4xl font-extrabold tracking-tight sm:text-5xl lg:text-6xl">
          <span class="block text-accent">HTTPForms</span>
          <span class="block mt-2">Create beautiful forms for your website</span>
        </h1>
        <p class="mt-6 text-xl leading-8">
          Build custom contact forms with our easy-to-use form builder and embed them on your website in minutes.
        </p>
        <div class="mt-10 flex flex-col sm:flex-row sm:space-x-4 space-y-4 sm:space-y-0">
          <% if (locals.user) { %>
            <a href="/dashboard" class="btn-accent text-center">Go to Dashboard</a>
            <a href="/form/new" class="btn-outline text-center">Create New Form</a>
          <% } else { %>
            <a href="/register" class="btn-accent text-center">Get Started Free</a>
            <a href="/login" class="btn-outline text-center">Sign In</a>
          <% } %>
        </div>
      </div>
      <div class="mt-12 lg:mt-0 lg:col-span-6">
        <div class="bg-white p-8 rounded-lg shadow-xl">
          <div class="bg-primary-light p-4 rounded-t-lg">
            <h3 class="text-white text-lg font-bold">Contact Form Example</h3>
          </div>
          <div class="bg-white p-4 rounded-b-lg">
            <div class="space-y-4">
              <div>
                <label class="form-label">Name</label>
                <input type="text" class="form-input" placeholder="John Doe">
              </div>
              <div>
                <label class="form-label">Email</label>
                <input type="email" class="form-input" placeholder="john@example.com">
              </div>
              <div>
                <label class="form-label">Message</label>
                <textarea class="form-input" rows="4" placeholder="Your message here..."></textarea>
              </div>
              <button class="btn-primary w-full">Submit</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="absolute bottom-0 inset-x-0 h-24 bg-gradient-to-t from-gray-50"></div>
</section>

<!-- Features Section -->
<section class="py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-extrabold text-primary sm:text-4xl">
        A better way to collect information
      </h2>
      <p class="mt-4 text-lg text-gray-600">
        Streamline your communication with powerful features designed to make form building easier and more effective.
      </p>
    </div>

    <div class="mt-16 grid gap-8 md:grid-cols-3">
      <!-- Feature 1 -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="h-12 w-12 bg-primary-light rounded-md flex items-center justify-center mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-primary mb-2">Easy Form Builder</h3>
        <p class="text-gray-600">Create custom forms with our intuitive drag-and-drop form builder. No coding required.</p>
      </div>

      <!-- Feature 2 -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="h-12 w-12 bg-primary-light rounded-md flex items-center justify-center mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-primary mb-2">Domain Control</h3>
        <p class="text-gray-600">Specify which domains can use your forms. Keep your forms secure and prevent unauthorized usage.</p>
      </div>

      <!-- Feature 3 -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="h-12 w-12 bg-primary-light rounded-md flex items-center justify-center mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-primary mb-2">Email Notifications</h3>
        <p class="text-gray-600">Receive instant email notifications for new form submissions. Never miss an important message.</p>
      </div>
    </div>
  </div>
</section>

<!-- Call to Action -->
<section class="bg-primary py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-3xl font-extrabold text-white sm:text-4xl">
      Ready to get started?
    </h2>
    <p class="mt-4 text-lg text-gray-300">
      Create your account today and start building beautiful forms for your website.
    </p>
    <div class="mt-8 flex justify-center">
      <% if (locals.user) { %>
        <a href="/dashboard" class="btn-accent">Go to Dashboard</a>
      <% } else { %>
        <a href="/register" class="btn-accent">Get Started Free</a>
      <% } %>
    </div>
  </div>
</section> 